<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sent_msg"
        android:layout_gravity="end"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:text="@string/sent_message"
        android:gravity="center_vertical"
        android:background="@drawable/ic_chat_sent_bg"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/tv_sent_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:text="@string/timestamp"
        android:textSize="12sp"
        android:paddingHorizontal="12dp"
        android:textStyle="italic"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="50dp"
        android:id="@+id/receivedLL"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_chat_received_bg"
        android:layout_marginRight="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_received_msg"
            android:paddingVertical="12dp"
            android:textColor="@color/black"
            android:text="@string/received_message"
            />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_recieved_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:text="@string/timestamp"
        android:textSize="12sp"
        android:paddingHorizontal="12dp"
        android:textStyle="italic"
        android:textColor="@color/white" />

</LinearLayout>